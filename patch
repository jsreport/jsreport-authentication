+                    '_id': { 'key': true, 'nullable': false, 'computed': true, 'type': 'Edm.String'},
+                    'shortid': { 'type': 'Edm.String' },
+                    'username': { 'type': 'Edm.String' },
+                    "password": { type: "Edm.String" }
